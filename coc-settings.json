{
    "languageserver": {
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "trace.server": "verbose",
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true,
                    "completionSnippets": true
                }
            }
        }
    }
}
